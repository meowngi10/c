#include <stdio.h>
int is_prime(int num) {
    if (num <= 1) {
        return 0;
    }
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return 0;
        }
    }
    return 1;
}

int main() {
    int A[20]={3,4,6,7,12,15,17,18,11,24,15,-9,-20,-8,-10,-16};
    int b_ar[20]; 
    int i,counter;
    
    for(i=0; i<20; i++){
        if(is_prime(A[i])){
            b_ar[i]=A[i];
            counter++;
            A[i]=0;
          }
    }
    printf("raodenoba %d\n", counter);
    printf("\nb\n");
    for(i=0; i<20; i++){
        if(b_ar[i]!=0){
            printf("%d ", b_ar[i]);
        }
    }
    printf("\nA\n");
    for(i=0; i<20; i++){
        printf("%d ", A[i]);
    }
    return 0;
}
