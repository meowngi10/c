#include <stdio.h>

int main() {
    int i;
    int A[20]={3,4,6,7,12,15,17,18,11,24,15,-9,-20,-8,-10,-16};
    int b_ar[20];
    int counter = 0;
    
    for(i=0; i<20; i++){
        if(A[i]>A[i-1] && A[i]>A[i+1]){
            counter++;
            b_ar[i]=A[i];
        }
    }
    printf("raodenoba magali ricxvebis %d\n", counter);
    
    printf("magali ricxvebis array ");
    for(i=0; i<20; i++){
        if(b_ar[i]==A[i]){
            A[i]=0;
        }
        if(b_ar[i]!=0){
            printf("%d\t", b_ar[i]);
        }
    }
    
    printf("\nganulebuli A\n");
    for(i=0; i<20; i++){
            printf("%d\t", A[i]);
        }
    

    return 0;
}

