// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int X;
    int counter=0;
    int arr[10000];
    
    while(1){
        printf("Sheitaned ricxvi\t");
        scanf("%d", &X);
        if(X==0){
            break;
        }
    
        if(X%7==1 || X%7==2 || X%7==5){
            arr[counter]=X;
            counter++;
        }

    }
    
    for (int i=0; i<counter; i++){
        printf("%d ", arr[i]);
    }

    return 0;
}


