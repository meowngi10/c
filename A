// Online C compiler to run C program online

int is_prime(int num) {
    if (num <= 1) {
        return 0;
    }
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return 0;
        }
    }
    return 1;
}

#include <stdio.h>

int main() {
    int A[20] = {3,4,6,7,12,15,17,18,11,24,15,-9,-20,-8,-10,-16};
    int b_ar[20];
    int counter;
    
    for(int i=0; i<20; i++){
        if(is_prime(A[i])){
            counter++;
            b_ar[i]=A[i];
            A[i]=0;
            
        }
    }
    
    printf("A masivi \n");
    for(int i=0; i<20; i++){
        printf("%d ", A[i]);
    }
    
    printf("\nb masivi \n");
     for(int i=0; i<20; i++){
         if(b_ar[i]!=0){
                printf("%d ", b_ar[i]);
             
         }
    }
    
    return 0;
}

3.1
#include <stdio.h>

int main() {
   char *names[4] = {"Nino", "Nana", "Lika", "Maka"};
   char *subs[4] = {"shualeduri", "prezentacia", "sashinao davaleba", "finaluri"};
   int i,j;
   int A[4][4]={
       {23,15,12,29},
       {20,25,10,28},
       {30,16,13,40},
       {19,20,15,28},
   };
   int max = 0;
   int max2 = 0;
   int maxname, maxsub;
   int name, sub;
   
   for (i=0; i<4; i++){
       for(j=0; j<4; j++){
           // udidesi
           if(A[i][j]>max){
               max2=max;
               name = maxname;
               sub = maxsub;
               max=A[i][j];
               maxname = i;
               maxsub = j;
           }
       }
   };
   
   printf("%s - ", names[name]);
   printf("%s - ", subs[sub]);
   printf("%d", max2);
    

    return 0;
}

3.2
#include <stdio.h>

int is_prime(int num) {
    if (num <= 1) {
        return 0;
    }
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return 0;
        }
    }
    return 1;
}

int main() {
    int arr[4][4];
    int i, j;
    
    //pirveli
    for(i = 0; i < 4;){
        for(j = 1; j <= 10; j++){
            if(is_prime(j)){
                arr[0][i] = j;
                i++;
            }
        }
    }
    
    //meore
    for(i = 0; i < 4;){
        for(j = 1; j <= 10; j++){
            if(j % 2 == 0){
                arr[1][i] = j;
                i++;
            }
        }
    }
    
    //mesame
    for(i = 0; i < 4; i++){
        arr[2][i] = arr[0][i] + arr[1][i];
        arr[3][i] = 0;
    }
    
    for(i = 0; i < 4; i++){
        for(j = 0; j < 4; j++){
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }
    
    return 0;
}

int is_prime(int num) {
    if (num <= 1) {
        return 0;
    }
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return 0;
        }
    }
    return 1;
}


